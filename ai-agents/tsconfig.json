{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/src/*"],
      "@agents/*": ["./agents/src/*"],
      "@mcp/*": ["./mcp-servers/src/*"]
    }
  },
  "references": [
    { "path": "./shared" },
    { "path": "./agents" },
    { "path": "./mcp-servers" }
  ],
  "files": []
}